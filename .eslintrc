{
  "extends": [
    "airbnb-base",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", { "allow": ["log"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id", "__dirname"] }],
    "import/extensions": "off",
    "import/prefer-default-export": "off"
  }
}